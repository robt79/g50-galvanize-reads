<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Authors Profile Page</title>
</head>

<body>
  <a href="/">Home</a>
  <a href="/books">Books</a>
  <a href="/authors">Authors</a>
  <!-- <a href="/books/add">Add Book</a> -->
  <!-- <a href="/authors/add">Add Author</a> -->
  <h1>Authors Profile Page</h1>
  <% authors.forEach((author) => { %>
    <img src="<%= author['portrait'] %>" alt="<%= author['firstname'] %>" style="height:200px;width:200px; border: solid;" />
    <h2><%=author['firstname']+' '+author['lastname']%></h2>
    <p>
      <%=author['bio']%>
    </p>
    <p><strong>Books:</strong></p>
    <ol>
      <% for (let i = 0; i < authors.books.length; i++) { %>
        <a href="/books/<%=authors.books[i]['book_id'] %>">
          <li>
            <%=authors.books[i]['title']%>
          </li>
        </a>
        <% }; %>
    </ol>
    <% }); %>
      <button type="button" class="btn btn-defualt">Edit</button>
      <button type="button" class="btn btn-defualt">Remove</button>
</body>

</html>
